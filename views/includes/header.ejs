<div class="header">
    <div class="header44">
        <div class="main_menu">
            <a href="/"><img src="/themes/drogo/public/img/logo.png" style="height: 26px" alt="LOGO"></a>
        </div>
        <div class="user_panel">
            <div class="loginin continueViewingBlock" style="display: none;">
                <a href="javascript:void(0)" id="continueViewing">На чем остановились?</a>
            </div>
        </div>
        <div class="search_panel">
            <div class="searchbar">
                <form action="/<%- page.urls.search %>/title" name="searchform" method="get">
                    <input name="q" placeholder="Название" type="text">
                    <button class="fbutton2" type="submit" title="Найти" style="float: right;">
                        Найти
                    </button>
                </form>
            </div>
        </div>
    </div>
    <div class="header55">
        <div class="leftblok1_header">
            <div class="navigation">
                <div class="topmenu"></div>
                <div class="deepnavigation">
                    <table class="menu">
                        <tbody>
                        <tr>
                            <td class="item">
                                <a href="/"><span class="name">Главная</span></a>
                            </td>
                            <td class="item">
                                <a href="/<%- page.urls.year %>/2017"><span class="name">Новинки</span></a>
                            </td>
                            <td class="item">
                                <a href="/<%- page.urls.type %>/<%- page.urls.types.serial %>"><span class="name">Сериалы</span></a>
                            </td>
                            <td class="item">
                                <a href="/<%- page.urls.content %>?tag=Коллекция"><span class="name">Коллекции</span></a>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div style="clear:both"></div>
    <div class="horizontal2">
        <div class="horizontal">

            <% if (typeof top === 'object' && top.length) { %>
            <div class="carousel">
                <a class="carousel_prev carousel_left disable" href="">prev</a>
                <div class="carousel_container">
                    <ul class="portfolio_items">
                        <% top.forEach(function (movie) { %>
                        <li>
                            <div class="inner">
                                <a href="<%- movie.url %>" title="<%= movie.title %>">
                                    <div style="position: relative;">
                                        <img src="<%- movie.poster %>" style="width: 118px" alt="<%= movie.title %> (<%- movie.year %>)" title="<%= movie.title %> (<%- movie.year %>)">
                                        <% if (movie.quality) { %>
                                        <div class="cinemapress-quality" style="margin: 3px; padding: 3px;font-size: 10px;">
                                            <span class="cinemapress-svg-quality" style="height: 8px !important;min-height: 8px !important;"></span>&nbsp;<%- movie.quality %>
                                        </div>
                                        <% } %>
                                    </div>
                                </a>
                            </div>
                        </li>
                        <% }); %>
                    </ul>
                </div>
                <a class="carousel_next carousel_right" href="">next</a>
            </div>
            <% } else if (typeof slider === 'object' && slider.length) { %>
            <div class="carousel">
                <a class="carousel_prev carousel_left disable" href="">prev</a>
                <div class="carousel_container">
                    <ul class="portfolio_items">
                        <% slider.forEach(function (movie) { %>
                        <li>
                            <div class="inner">
                                <a href="<%- movie.url %>" title="<%= movie.title %>">
                                    <div class="cinemapress-poster">
                                        <img src="<%- movie.poster %>" style="width: 118px" alt="<%= movie.title %> (<%- movie.year %>)" title="<%= movie.title %> (<%- movie.year %>)">
                                        <% if (movie.quality) { %>
                                        <div class="cinemapress-quality" style="margin: 3px; padding: 3px;font-size: 10px;">
                                            <span class="cinemapress-svg-quality" style="height: 8px !important;min-height: 8px !important;"></span>&nbsp;<%- movie.quality %>
                                        </div>
                                        <% } %>
                                    </div>
                                </a>
                            </div>
                        </li>
                        <% }); %>
                    </ul>
                </div>
                <a class="carousel_next carousel_right" href="">next</a>
            </div>
            <% } %>
        </div>
    </div>
</div>