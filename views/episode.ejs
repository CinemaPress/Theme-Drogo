<!doctype html>
<html lang="<%- page.language %>" prefix="og: http://ogp.me/ns# video: http://ogp.me/ns/video# ya: http://webmaster.yandex.ru/vocabularies/">
<head>

    <% include includes/head.ejs %>

</head>
<body>

<div class="header_black"></div>

<div class="wrapper">

    <% include includes/header.ejs %>

    <div class="contener">

        <div class="contener2">

            <div class="content">

                <div id="cinemapress-content">

                    <div style="padding: 9px 10px 8px 20px;">
						<span>
							<a href="/">
								<%- page.l.home %>
							</a>
						</span> »
                        <span>
							<%- movie.genre_url %>
						</span> »
                        <span>
							<a href="<%- movie.url %>">
								<%= movie.title %>
							</a>
						</span> »
                        <%- page.l.episode %>
                    </div>

                    <% if (typeof page.adv === 'object' && page.adv.top) { %>
                    <div style="text-align: center; margin: 10px auto">
                        <%- page.adv.top %>
                    </div>
                    <% } %>

                    <div class="fullstory">

                        <div class="shortstorytitle">
                            <h1><%- page.h1 %></h1>
                        </div>

                        <div class="fullimg" style="margin-right: 30px">
                            <div style="display:inline;">
                                <% if (movie.poster) { %>
                                <a href="<%- movie.url %>" style="float: left">
                                    <div class="cinemapress-poster">
                                        <img src="<%- movie.poster %>" style="width: 200px; height: 300px;" alt="<%= page.title %>" title="<%= page.title %>" id="cinemapress-poster">
                                        <% if (movie.quality) { %>
                                        <div class="cinemapress-quality">
                                            <span class="cinemapress-svg-quality"></span>
                                            <%- movie.quality %>
                                        </div>
                                        <% } %>
                                        <% if (movie.translate) { %>
                                        <div class="cinemapress-translate">
                                            <span class="cinemapress-svg-translate"></span>
                                            <%- movie.translate %>
                                        </div>
                                        <% } %>
                                    </div>
                                </a>
                                <% } %>
                                <% if (page.seo) { %>
                                <div style="text-align: justify;">
                                    <%- page.seo %>
                                </div>
                                <% } %>
                                <br>
                                <% if (movie.kp_rating) { %>
                                <strong><%- page.l.kp %>:</strong> <%- movie.kp_rating/10 %> (<%- movie.kp_vote %> <%- page.l.votes %>)<br>
                                <% } %>
                                <% if (movie.imdb_rating) { %>
                                <strong><%- page.l.imdb %>:</strong> <%- movie.imdb_rating/10 %> (<%- movie.imdb_vote %> <%- page.l.votes %>)<br>
                                <% } %>
                                <br>
                                <% if (movie.year_url) { %>
                                <strong><%- page.l.year %>:</strong> <%- movie.year_url %><br>
                                <% } %>
                                <% if (movie.countries_url) { %>
                                <strong><%- page.l.countries %>:</strong> <%- movie.countries_url %><br>
                                <% } %>
                                <% if (movie.genres_url) { %>
                                <strong><%- page.l.genres %>:</strong> <%- movie.genres_url %><br>
                                <% } %>
                                <br>
                                <% if (movie.directors_url) { %>
                                <strong><%- page.l.directors %>:</strong> <%- movie.directors_url %><br>
                                <% } %>
                                <% if (movie.actors_url) { %>
                                <strong><%- page.l.actors %>:</strong> <%- movie.actors_url %><br>
                                <% } %>
                            </div>

                            <div style="clear: both"></div>

                            <div class="episodesListBlock" style="display: none; margin: 10px auto;">
                                <h3><%= movie.title %> <%- page.l.episodes %></h3>
                                <div id="episodesList" data-id="<%- movie.kp_id %>"></div>
                            </div>

                            <div style="clear: both"></div>

                            <% if (movie.pictures.length) { %>
                            <div class="screens" id="lightgallery">
                                <% movie.pictures.forEach(function (picture) { %>
                                <% var ahref = page.urls.movies.picture
                                        ? movie.url + '/' + page.urls.movies.picture
                                        : picture.picture_big %>
                                <a href="<%- ahref %>">
                                    <img src="<%- picture.picture_min %>" alt="<%= movie.title %> (<%- movie.year %>)" title="<%= movie.title %> (<%- movie.year %>)">
                                </a>
                                <% }); %>
                            </div>
                            <% if (!page.urls.movies.picture) { %>
                            <link href="/themes/default/public/desktop/css/lightgallery.min.css" rel="stylesheet">
                            <script src="/themes/default/public/desktop/js/lightgallery.min.js"></script>
                            <script>lightGallery(document.getElementById('lightgallery'));</script>
                            <% } %>
                            <% } %>

                            <div style="clear: both"></div>

                            <div class="stronk">
                                <strong>
                                    <%- page.l.episode %> <%= movie.title %>
                                </strong>
                            </div>

                        </div>

                    </div>

                </div>

                <div style="clear: both"></div>

                <% if (typeof page.adv === 'object' && page.adv.over) { %>
                <div style="text-align: center; margin: 10px auto">
                    <%- page.adv.over %>
                </div>
                <% } %>

                <div class="section">

                    <div class="watchLaterBlock" style="float:right;padding: 7px 10px 7px 0;font-size:11px;display: none;">
                        <a href="javascript:void(0)" id="watchLater"><%- page.l.later %></a>
                    </div>

                    <div class="tabs">
                        <% if (page.urls.movies.online) { %>
                        <a href="<%- movie.url %>/<%- page.urls.movies.online %>"><%- page.l.online %></a>
                        <% } %>
                        <% if (page.urls.movies.download) { %>
                        <a href="<%- movie.url %>/<%- page.urls.movies.download %>"><%- page.l.download %></a>
                        <% } %>
                        <% if (page.urls.movies.trailer) { %>
                        <a href="<%- movie.url %>/<%- page.urls.movies.trailer %>"><%- page.l.trailer %></a>
                        <% } %>
                    </div>

                    <div style="clear:both"></div>

                    <div id="cinemapress-player" class="box visible">
                        <% if (page.player) { %>
                            <%- page.player %>
                        <% } %>
                    </div>

                </div>

                <% if (typeof page.adv === 'object' && page.adv.under) { %>
                <div style="text-align: center; margin: 10px auto">
                    <%- page.adv.under %>
                </div>
                <% } %>

                <% if (typeof contents === 'object' && contents.length) { %>
                <div style="clear: both"></div>
                <% contents.forEach(function (content) { %>
                <div style="float: left; width: 50%;">
                    <div style="margin: 0; padding: 10px">
                        <a href="<%- content.url %>" class="cinemapress-news" style="background-image:url(<%- content.image %>);">
                            <div class="cinemapress-news-title">
                                <%= content.title %>
                            </div>
                        </a>
                    </div>
                </div>
                <% }); %>
                <div style="clear: both"></div>
                <% } %>

                <% if (typeof movies === 'object') {
                        for (var type in movies) {
                if (movies.hasOwnProperty(type) && movies[type].length) {
                movies[type].forEach(function (category) { %>
                <div class="relatednews_title">
                    <i><span class="selection_index"></span><%- category.name %></i>
                    <div class="randomMovieRelated">
                        <div class="cinemapress-random-related"
                             onclick="window.location.href='<%- category.url %>?random'"
                             title="<%- page.l.random %>">
                            <img src="/themes/drogo/public/images/dice.svg" alt="<%- page.l.random %>">
                        </div>
                    </div>
                </div>
                <div class="relatednews">
                    <ul class="ul_related"><% if (category.movies.length) {
                        category.movies.splice(5, category.movies.length % 5);
                        category.movies.forEach(function (movie) { %><li>
                            <a href="<%- movie.url %>" title="<%= movie.title %> (<%- movie.year %>)">
                                <img src="<%- movie.poster %>" style="height:165px; width:110px" alt="<%= movie.title %>">
                                <%= movie.title %> (<%- movie.year %>)
                            </a>
                        </li><% }); } %>
                    </ul>
                </div>
                <% }); } } } %>

                <div style="clear:both;"></div>

                <% if (page.comments) { %>
                <div style="padding: 10px;">
                    <%- page.comments %>
                </div>
                <% } %>

                <% if (typeof page.adv === 'object' && page.adv.bottom) { %>
                <div style="text-align: center; margin: 10px auto">
                    <%- page.adv.bottom %>
                </div>
                <% } %>

            </div>

            <% include includes/left.ejs %>

        </div>

    </div>

    <% include includes/footer.ejs %>

</div>

</body>
</html>