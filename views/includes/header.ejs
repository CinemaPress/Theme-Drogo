<div class="header">

    <div class="header44">

        <div class="main_menu">
            <a href="/">
                <img src="/themes/drogo/public/img/logo.png" height="26">
            </a>
        </div>

        <div class="user_panel">
            <div class="loginin continueViewingBlock" style="display: none;">
                <a href="javascript:void(0)" id="continueViewing">На чем остановились?</a>
            </div>
        </div>

        <div class="search_panel">
            <span class="searchbar">
                <form action="<%- page.protocol %><%- page.domain %>/<%- page.urls.search %>/title" name="searchform" method="get">
                    <input name="q" value="Название" onblur="if(this.value=='') this.value='Название';" onfocus="if(this.value=='Название') this.value='';" type="text">
                    <button class="fbutton2" type="submit" title="Найти" style="float: right;">
                        <span>Найти</span>
                    </button>
                </form>
            </span>
        </div>

    </div>

    <div class="header55">

        <div class="leftblok1_header">

            <div class="navigation">

                <div class="topmenu"></div>

                <div class="deepnavigation">

                    <table class="menu">
                        <tbody>
                        <tr>
                            <td class="item">
                                <a href="<%- page.protocol %><%- page.domain %>"><span class="name">Главная</span></a>
                            </td>
                            <td class="item">
                                <a href="<%- page.protocol %><%- page.domain %>/<%- page.urls.year %>/2016"><span class="name">Новинки</span></a>
                            </td>
                            <td class="item">
                                <a href="<%- page.protocol %><%- page.domain %>/<%- page.urls.type %>/<%- page.urls.types.serial %>"><span class="name">Сериалы</span></a>
                            </td>
                            <td class="item">
                                <a href="<%- page.protocol %><%- page.domain %>/<%- page.urls.collection %>"><span class="name">Коллекции</span></a>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>

    </div>

    <div style="clear:both"></div>

    <div class="horizontal2">
        <div class="horizontal">

            <% if (typeof top == 'object' && top.movies.length) { %>

            <div class="carousel">
                <a class="carousel_prev carousel_left disable" href="">prev</a>
                <div class="carousel_container">
                    <ul class="portfolio_items">

                        <% top.movies.forEach(function (movie) { %>

                        <li>
                            <div class="inner">
                                <a href="<%- movie.url %>" title="<%- movie.title %>"><img src="<%- movie.poster %>" width="118"></a>
                            </div>
                        </li>

                        <% }); %>

                    </ul>
                </div>
                <a class="carousel_next carousel_right" href="">next</a>
            </div>

            <% } else if (typeof slider == 'object' && slider.movies.length) { %>

            <div class="carousel">
                <a class="carousel_prev carousel_left disable" href="">prev</a>
                <div class="carousel_container">
                    <ul class="portfolio_items">

                        <% slider.movies.forEach(function (movie) { %>

                        <li>
                            <div class="inner">
                                <a href="<%- movie.url %>" title="<%- movie.title %>"><img src="<%- movie.poster %>" width="118"></a>
                            </div>
                        </li>

                        <% }); %>

                    </ul>
                </div>
                <a class="carousel_next carousel_right" href="">next</a>
            </div>

            <% } %>

        </div>
    </div>


</div>